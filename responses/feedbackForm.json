{
  "heading": "Форма обратной связи",
  "fields": [
    {
      "label": "Имя",
      "type": "text",
      "validation": "^[a-zA-ZА-Яа-я]+$"
    },
    {
      "label": "Телефон",
      "type": "text",
      "validation": "^+7(\\\\d{3})\\\\d{3}-\\\\d{4}$"
    },
    {
      "label": "E-mail",
      "type": "text",
      "validation": "^([a-z0-9_\\\\.-]+)@([a-z0-9_\\\\.-]+)\\\\.([a-z\\\\.]{2,6})$"
    },
    {
      "label": "Сообщение",
      "type": "textarea",
      "validation": "^.*$"
    }
  ]
}
